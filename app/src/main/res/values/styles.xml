<resources>
    <!--Themes-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>

        <item name="elevation">12dp</item>
    </style>

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!--TextView Styles-->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/md_grey_800</item>
    </style>

    <style name="HeaderTextStyle" parent="TextViewStyle">
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BodyTextStyle" parent="TextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="CaptionTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MarkerTextStyle">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="ActionableTextViewRowStyle" parent="LowElevationStyle">
        <item name="android:padding">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Material Style Overrides-->
    <style name="LowElevationStyle">
    </style>

</resources>
